---
import Section from '@/components/Section.astro';

import {skills} from "@cv";
---

<Section title="Skills">
    <ul>
        {skills.map(({ name, level, keywords }) => (
            <li>
                <h3>{name}</h3>
                <p>{level}</p>
                <ul class="intern">
                    {keywords.map((keyword) => (
                        <li class="highlight">{keyword}</li>
                    ))}
                </ul>
            </li>
        ))}
    </ul>
</Section>

<style>
    ul {
        display: grid;
        gap: 1rem;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }

    ul .intern {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        display: inline-block;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        background-color: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: : 0.2rem 0.6rem;
        width: fit-content;
    }

    li .highlight {
        background-color: #ddd;
        color: #333;
        font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
        border-radius: 6px;
    }
</style>