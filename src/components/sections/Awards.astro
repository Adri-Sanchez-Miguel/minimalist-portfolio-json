---
import Section from '@/components/Section.astro';

import {awards} from "@cv";
---

<Section title="Premios">
    <ul>
        {awards.map(({ title, date, awarder, summary }) => {

            return (
                <li>
                    <article>
                        <header>
                            <h3>{title}</h3>
                            <h4>{awarder}</h4>
                            <time>{date}</time>   
                            <p>{summary}</p>
                        </header>
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style> 
    ul {
        display: grid;
        gap: 1rem;
        flex-direction: column;
    }

    article h3 {
        font-weight: 700;
        color: #111;
    }

    article h4 {
        font-weight: 500;
        color: #222;
    }

    header {
        gap: 8px;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    time {
        color: #555;
    }
</style>